{% extends 'base.html.twig' %}

{% block title %}Checklist index{% endblock %}

{% block body %}
    <h1>Checklist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Presentation</th>
                <th>Athena</th>
                <th>Pre_assess</th>
                <th>Post_assess</th>
                <th>Orientation</th>
                <th>Appliedtograd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for checklist in checklists %}
            <tr>
                <td>{{ checklist.id }}</td>
                <td>{{ checklist.presentation }}</td>
                <td>{{ checklist.athena ? checklist.athena|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ checklist.preAssess ? checklist.preAssess|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ checklist.postAssess ? checklist.postAssess|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ checklist.orientation ? checklist.orientation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ checklist.appliedtograd }}</td>
                <td>
                    <a href="{{ path('checklist_show', {'id': checklist.id}) }}">show</a>
                    <a href="{{ path('checklist_edit', {'id': checklist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('checklist_new') }}">Create new</a>
{% endblock %}
