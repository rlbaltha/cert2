{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Application</th>
                <td>{{ card.application }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ card.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ card.body|raw }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-primary" href="{{ path('card_edit', {'id': card.id}) }}">Edit</a>

    {{ include('card/_delete_form.html.twig') }}
{% endblock %}
