{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <a class="btn btn-primary" href="{{ path('course_edit', {'id': course.id}) }}">Edit</a>

    {{ include('course/_delete_form.html.twig') }}

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Sphere</th>
                <td>{{ course.sphere }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ course.level }}</td>
            </tr>
        </tbody>
    </table>




{% endblock %}
