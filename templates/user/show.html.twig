{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.firstName }} {{ user.lastName }}</h1>

    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Edit Profile</a>

    {{ include('user/_delete_form.html.twig') }}

    <table class="table">
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        {% endif %}
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        </tbody>
    </table>

    <h1>Checklist</h1>

    {% for checklist in user.checklists %}
        <a class="btn btn-primary" href="{{ path('checklist_edit', {'id': checklist.id}) }}">Update Checklist</a>
        <table class="table">
            <tr>
                <th>Pre_assess</th>
                <td>{{ checklist.preAssess ? checklist.preAssess|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Orientation</th>
                <td>{{ checklist.orientation ? checklist.orientation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Appliedtograd</th>
                <td>{{ checklist.appliedtograd }}</td>
            </tr>
            <tr>
                <th>Seminar</th>
                <td>{% if checklist.seminar %}{{ checklist.seminar.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sphere 1</th>
                <td>{% if checklist.sphere1 %}{{ checklist.sphere1.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sphere 2</th>
                <td>{% if checklist.sphere2 %}{{ checklist.sphere2.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sphere 3</th>
                <td>{% if checklist.sphere3 %}{{ checklist.sphere3.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Capstone</th>
                <td>{% if checklist.capstone %}{{ checklist.capstone.name }}{% endif %}</td>
            </tr>
            <tbody>
            <tr>
                <th>Presentation</th>
                <td>{{ checklist.presentation }}</td>
            </tr>
            <tr>
                <th>Athena</th>
                <td>{{ checklist.athena ? checklist.athena|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Post_assess</th>
                <td>{{ checklist.postAssess ? checklist.postAssess|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>
    {% else %}
        <a class="btn btn-primary" href="{{ path('checklist_new') }}">Start Checklist</a>
    {% endfor %}

{% endblock %}
