{% extends 'base.html.twig' %}

{% block title %}Substitution index{% endblock %}

{% block body %}
    <h1>Substitution index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Requirement</th>
                <th>Description</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for substitution in substitutions %}
            <tr>
                <td>{{ substitution.id }}</td>
                <td>{{ substitution.requirement }}</td>
                <td>{{ substitution.description }}</td>
                <td>{{ substitution.status }}</td>
                <td>
                    <a href="{{ path('substitution_show', {'id': substitution.id}) }}">show</a>
                    <a href="{{ path('substitution_edit', {'id': substitution.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('substitution_new') }}">Create new</a>
{% endblock %}
