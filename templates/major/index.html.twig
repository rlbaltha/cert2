{% extends 'base.html.twig' %}

{% block title %}Major index{% endblock %}

{% block body %}
    <h1>Major index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for major in majors %}
            <tr>
                <td>{{ major.id }}</td>
                <td>{{ major.name }}</td>
                <td>
                    <a href="{{ path('major_show', {'id': major.id}) }}">show</a>
                    <a href="{{ path('major_edit', {'id': major.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('major_new') }}">Create new</a>
{% endblock %}
